{
  "name": "express-ts-node-boilerplate",
  "version": "1.0.0",
  "description": "Express + Node + Typrescript with any service provider (Supabase / Local DB)",
  "author": "Dian Afrial Rahadi Ragil <agil.rahadi@gmail.com>",
  "main": "dist/src/index.js",
  "private": false,
  "license": "MIT",
  "engines": {
    "node": ">=18",
    "yarn": "*"
  },
  "scripts": {
    "precommit": "yarn lint",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "start:prod": "cross-env NODE_ENV=production node dist/index.js",
    "build": "rm -rf dist && cross-env NODE_ENV=production npx tsc",
    "dev": "nodemon ./src/index.ts",
    "lint": "eslint ./src/ --ignore-path .gitignore --ignore-pattern internals/scripts",
    "lint:fix": "yarn lint --fix",
    "lint:watch": "yarn lint --watch",
    "test": "jest -i --colors --verbose --detectOpenHandles",
    "test:watch": "jest -i --watchAll",
    "coverage": "jest -i --coverage",
    "coverage:coveralls": "jest -i --coverage --coverageReporters=text-lcov | coveralls",
    "validate": "yarn lint && yarn test",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:agilworld/ebuddy-firebase-backend.git"
  },
  "keywords": [
    "express",
    "node",
    "node.js",
    "REST",
    "API"
  ],
  "dependencies": {
    "@netlify/functions": "^2.7.0",
    "@supabase/supabase-js": "^2.43.5",
    "axios": "^1.7.2",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "dotenv-safe": "^9.1.0",
    "express": "4.19.2",
    "firebase-admin": "^12.1.1",
    "global": "^4.4.0",
    "helmet": "^7.1.0",
    "http-status": "^1.7.4",
    "jwt-simple": "^0.5.6",
    "lodash": "^4.17.21",
    "moment-timezone": "^0.5.45",
    "netlify": "^13.1.18",
    "netlify-cli": "^17.26.3",
    "serverless-http": "^3.2.0",
    "typescript": "^5.4.5",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.2",
    "@types/supertest": "^6.0.2",
    "coveralls": "^3.1.1",
    "eslint": "^9.4.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^28.6.0",
    "eslint-plugin-prettier": "^5.1.3",
    "faker": "^6.6.6",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "nodemon": "^3.1.3",
    "prettier": "^3.3.2",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.5",
    "ts-node-dev": "^2.0.0"
  }
}
